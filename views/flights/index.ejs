<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <title>Mongoose Flights</title>
</head>
<body>
    <nav class="w3-bar w3-border w3-light-grey">
        <a class="w3-bar-item w3-button" href="../" style="width:50%">HOME</a>
        <a class="w3-bar-item w3-button" href="/flights/new" style="width:50%">ADD FLIGHT</a>
    </nav>
  <h1>Flight List</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departure Date</th>
      </tr>
    </thead>
    <tbody>

      <% flights.forEach(m => { %>
        <tr>
          <td><%= m.airline %></td>
          <td><%= m.airport %></td>
          <td><%= m.flightNo %></td>
          <td><%= m.departs%></td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</body>
</html>
